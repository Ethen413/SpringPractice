<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.timeTable.mapper.UserMapper">
    <insert id="insert">
        insert user(id,username,password,email)
               VALUES (#{id},#{username},#{password},#{email})
    </insert>
    <update id="update">
        update form user where id = #{id}
        set
            username = #{username},
            password = #{password},
            email = #{email}
    </update>
    <delete id="delete">
        delete form user where id = #{id}
    </delete>
    <select id="findByUser" resultType="com.timeTable.entity.User">
        select * from user
        <where>
            1 = 1
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="username != null">
                AND username like CONCAT('%',#{username},'%')
            </if>
            <if test="email != null">
                AND email = #{email}
            </if>
        </where>
    </select>
</mapper>